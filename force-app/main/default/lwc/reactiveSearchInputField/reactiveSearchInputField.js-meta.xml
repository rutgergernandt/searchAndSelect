<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>58.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Search Input Field</masterLabel>
    <description>Reactive search input field. Use in conjunction with other reactive components such as data table and data fetcher to filter records.</description>
    <targets>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__FlowScreen">
            <property name="label" label="Label" type="String" role="inputOnly"/>
            <property name="placeholder" label="Placeholder" type="String" role="inputOnly"/>
            <property name="searchValue" label="Search Value" type="String" role="outputOnly"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>